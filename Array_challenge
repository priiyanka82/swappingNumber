//Write a C program to initialize a 3x3 array, insert elements into the array, read and print an array of elements using only pointers. 
//Also find and print the sum of all diagonal elements.

#include<stdio.h>
int main()
{
  int arr[3][3];
  printf("Enter Elements :\n");
  for (int i=0;i<3;i++)
  {
    for(int j=0;j<3;j++)
    {
      printf("Enter [%d][%d]th Element.\n",i,j);
      scanf("%d",(*(arr+i)+j));
    }
  }
  for (int i=0;i<3;i++)
  {
    for(int j=0;j<3;j++)
    {
      printf("\n[%d][%d]th Element.\n",i,j);
      printf("%d",*( * (arr+i) + j));
    }
  }
  int sum=0,j;
  for (int i=0;i<3;i++)
  {
    j=i;
    sum=sum+*( * (arr+i) + j);
  }
  printf("Sum of the elements in diagonal is %d",sum);
}
