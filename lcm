//program in C to find the LCM of two numbers using recursion
#include<stdio.h>
int gcd(int n1,int n2);
int main()
{
    int n1,n2,ln,b,s;
    printf("Input First Number :");
    scanf("%d",&n1);
    printf("\nEnter Second Number :");
    scanf("%d",&n2);
    if(n1!=n2)
    {
        ln=(n1*n2)/gcd(n1,n2);
        printf("LCM of%d and %d is %d",n1,n2,ln);
    }
    else
    {
        printf("Same number Entered Twice.");
    }
    return 0;
}
int gcd(int n1,int n2)
{
    if (n2==0) 
    {
        return n1; 
    }
    else 
    {
        return gcd(n2,n1%n2); 
    }
}
